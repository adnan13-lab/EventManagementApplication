@model Event_Mangement_System_Front_End.Models.Attendee

<div class="container">
    <h2>Update</h2>
    <form asp-controller="Attendee" asp-action="UpdateAttendee" method="post">

        <div class="form-group">
            <label asp-for="Name" class="control-label cus_label"></label>
            <input value="@ViewData["name"]" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger cus_label"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label cus_label"></label>
            <input value="@ViewData["email"]" asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger cus_label"></span>
        </div>

        <div class="form-group text-end" style="margin:10px">
            <button type="submit" class="btn btn-success btn-block cus_btn">Update</button>
        </div>
    </form>
</div>
