@model Event_Mangement_System_Front_End.Models.Event

<div class="container">
    <h2>Update</h2>
    <form asp-controller="Events" asp-action="UpdateEvent" method="post">

        <div class="form-group">
            <label asp-for="Title" class="control-label cus_label"></label>
            <input value="@ViewData["title"]" asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger cus_label"></span>
        </div>

        <div class="form-group">
            <label asp-for="Date" class="control-label cus_label"></label>
            <input value="@ViewData["date"]" asp-for="Date" type="date" class="form-control" />
            <span asp-validation-for="Date" class="text-danger cus_label"></span>
        </div>

        <div class="form-group">
            <label asp-for="Location" class="control-label cus_label"></label>
            <input value="@ViewData["location"]" asp-for="Location" class="form-control" />
            <span asp-validation-for="Location" class="text-danger cus_label"></span>
        </div>

        <div class="form-group text-end">
            <button type="submit" class="btn btn-success btn-block cus_btn">Update</button>
        </div>
    </form>
</div>
